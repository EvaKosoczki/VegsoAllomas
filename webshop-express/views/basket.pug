extends layout

block content

    .container.basket-container
      .row
        .col-12.text-center
          h1 #{title}
        
      .row.basket-small-res
        .col-10.offset-1
          table.table.table-striped
            thead
              tr
                th Picture
                th Name
                th Count
                th Price
            tbody
              tr
                td
                  img(src="/image/snowboards/burton-name-dropper.jpg", alt="mock" class="basket-pic")
                td Burton Name Dropper Snowboard 2020
                td 1
                td 469
        
            
      .row
        .col-12.text-left
          h2 Shipping & billing info
      .row
        .col-10.col-md-6
          form.form(action="/basket/orders", method="post")
            .form-group
              label Name
              input.form-control(name="name" )
            .form-group
              label Email
              input.form-control(type="email" name="email" )
              <small class="form-text text-muted">We will confirm your order here.</small>
            .form-group
              label Country
              input.form-control(name="country" )
            .form-group
              label Address
              input.form-control(name="address" )
            .form-group
              label Postal Code
              input.form-control(name="postalCode" )
            .form-group
              label City
              input.form-control(name="city" )
            .form-group
              label State or Province
              input.form-control(name="state" )
            .form-group
              label Phone Number
              input.form-control(name="phone" )
              <small class="form-text text-muted">We will call you only if there is an issue with your order.</small>
            button.order-buttons.btn.btn-success.btn-large.mr-5(type="submit") Place Order
            a.order-buttons.btn.btn-danger.btn-large(href="/products") Cancel


        .col-4.offset-2.basket-content
          .basket-summary.border.border-dark
            .row
              .col-md-6.text-left.ml-2
                h2 #{basket}
                p #{counter} item
              .col-5.text-right
                h2 #{basketTotalPrice} $
            hr
            
            .row
              each product in basketDetails
                .col-12.mr-3.text-right
                  h4 Name: #{product.name} 
                  h5 Quantity: #{product.quantity} 
                  h5 Unit Price: #{product.price} $ 
                  hr
                       
            .row
              .col-12.col-md-6.text-left.ml-2
                h3 Order Total
              .col-12.text-right.mr-3
                h3 #{basketTotalPrice} $
      
   
            

    .container.carousel
