        .row.d-flex.flex-wrap.align-items-center
          div.col-4.col-md-2.offset-md-1
            a(href="/products?filter=1&page=0&brand6=7")
              img.img-fluid(src="./image/brands/7_jones.png", alt="Jones")
          div.col-4.col-md-2
            a(href="/products?filter=1&page=0&brand7=8")
              img.img-fluid(src="./image/brands/8_ride.png", alt="Ride")
          div.col-4.col-md-2
            a(href="/products?filter=1&page=0&brand8=9")
              img.img-fluid(src="./image/brands/9_salomon.png", alt="Salomon")
          div.col-4.col-md-2
            a(href="/products?filter=1&page=0&brand9=10")
              img.img-fluid(src="./image/brands/10_rome.jfif", alt="Rome")
          div.col-4.col-md-2
            a(href="/products?filter=1&page=0&brand10=11")
